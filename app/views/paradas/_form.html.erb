<%= simple_form_for(parada, multipart: true) do |f| %>
  <div class="panel panel-default">
    <div class="panel-body">
      <% if parada.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(parada.errors.count, "erro") %></h2>

          <ul>
          <% parada.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <%= codigo_field f %>
      <%= f.input :descricao %>
    </div>

    <div class="panel-footer">
      <%= f.submit "Salvar", class: 'btn btn-primary' %> ou
      <%= link_to "Cancelar", :back, class: 'btn btn-default' %>
      <%= link_to "Apagar", @parada, 
                  method: :delete, 
                  class: 'btn btn-danger pull-right',
                  data: { confirm: 'Tem certeza que quer apagar?' } if @parada.persisted? %> 
    </div>
  </div>
<% end %>
