<%= simple_form_for(pedido, multipart: true) do |f| %>
  <div class="panel panel-default">
    <div class="panel-body">
      <% if pedido.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(pedido.errors.count, "erro") %></h2>

          <ul>
          <% pedido.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <%= f.input :numero, label: 'NÃºmero do pedido (gerado automaticamente)', input_html: { disabled: true } %>
      <%= f.input :cliente_id, collection: Cliente.all, input_html: { class: 'select2' } %>
      <%= f.input :observacao, label: 'ObservaÃ§Ã£o' %>
    </div>

    <div class="panel-footer">
      <%= f.submit "Salvar", class: 'btn btn-primary' %> ou
      <%= link_to "Cancelar", :back, class: 'btn btn-default' %>
      <%= link_to "Apagar", @pedido, 
                  method: :delete, 
                  class: 'btn btn-danger pull-right',
                  data: { confirm: 'Tem certeza que quer apagar?' } if @pedido.persisted? %> 
    </div>
  </div>
<% end %>
