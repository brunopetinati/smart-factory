<%= simple_nested_form_for(pedido, multipart: true) do |f| %>
  <div class="panel panel-default">
    <div class="panel-body">
      <% if pedido.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(pedido.errors.count, "erro") %></h2>

          <ul>
          <% pedido.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <%= f.input :numero, label: 'Número do pedido (gerado automaticamente)', input_html: { disabled: true } %>
      <%= f.input :cliente_id, collection: Cliente.all, input_html: { class: 'select2' } %>
      <%= f.input :prazo, include_blank: true %>

      <label>
        Etapas
      </label>
      <div class="etapas-wrapper" style="margin-bottom: 20px">
        <div id="etapas">
          <%= f.fields_for :etapas do |b| %>
            <div class="row">
              <%= b.input :maquina_id, 
                          label: 'Máquina',
                          collection: Maquina.all,
                          wrapper_html: { class: 'col-md-2' } %>
              <%= b.input :descricao,
                          wrapper_html: { class: 'col-md-2' } %>
              <%= b.input :quantidade,
                          label: 'Qtd',
                          wrapper_html: { class: 'col-md-1' } %>
              <%= b.input :data_entrega, 
                          label: 'Entrega',
                          as: :string,
                          include_blank: true,
                          input_html: { type: 'date' },
                          wrapper_html: { class: 'col-md-3' } %>
              <%= b.input :depende_de_id, 
                          label: 'Depende de...',
                          collection: Maquina.all,
                          include_blank: true,
                          input_html: { type: 'date' },
                          wrapper_html: { class: 'col-md-3' } %>

              <div class="col-md-1">
                <%= b.link_to_remove "<span class='fa fa-times'><span>".html_safe, 
                                      class: 'btn btn-default btn-sm', 
                                      style: 'margin-top: 24px' %>
              </div>
            </div>
          <% end %>
        </div>

        <%= f.link_to_add "Incluir Etapa", 
                          :etapas, 
                          class: 'btn btn-default', 
                          data: { target: '#etapas' }  %>
      </div>

      <%= f.input :observacao, label: 'Observação' %>
    </div>

    <div class="panel-footer">
      <%= f.submit "Salvar", class: 'btn btn-primary' %> ou
      <%= link_to "Cancelar", :back, class: 'btn btn-default' %>
      <%= link_to "Apagar", @pedido, 
                  method: :delete, 
                  class: 'btn btn-danger pull-right',
                  data: { confirm: 'Tem certeza que quer apagar?' } if @pedido.persisted? %> 
    </div>
  </div>
<% end %>
