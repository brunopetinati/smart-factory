<div class="page-header">
  <h1>Turnos</h1>
  <%= link_to "Novo Turno", new_turno_path, class: 'btn btn-primary' %>
</div>

<div class="panel panel-default">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Descrição</th>
        <th>Data cadastro</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @turnos.each do |turno| %>
        <tr>
          <td><%= link_to turno.descricao, turno %></td>
          <td><%= l turno.created_at, format: :xshort %></td>
          <td><%= link_to 'Editar', edit_turno_path(turno), class: 'btn btn-default btn-xs' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
