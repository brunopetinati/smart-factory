<h2>Editar perfil</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, multipart: true }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :avatar %>
  <%= f.input :nome, required: true, autofocus: true %>
  <%= f.input :email, required: true %>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
  <% end %>

  <%= f.input :password, autocomplete: "off", hint: "deixe em branco se não quiser mudá-la", required: false %>
  <%= f.input :password_confirmation, required: false %>
  <%= f.input :current_password, hint: "informe sua senha atual para confirmar suas mudanças", required: true %>
  <%= f.button :submit, "Salvar perfil", class: 'btn btn-primary' %>
<% end %>
