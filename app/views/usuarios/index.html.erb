<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">
      Usuários
      <%= link_to 'Novo Usuário'.html_safe, new_usuario_path, :class => 'btn btn-large btn-primary pull-right' %>
    </h1>
  </div>
</div>

<!-- /.row -->
<div class="panel panel-default">
  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
      <thead>
        <tr>
            <th>Código</th>
            <th>Nome</th>
            <th>Perfil</th>
            <th>E-mail</th>
            <th>Último acesso</th>
            <th>Situação</th>
            <th width="100px">Opções</th>
        </tr>
      </thead>
      <tbody>
      <% @usuarios.each do |usuario| %>
          <tr class="odd gradeX">
            <td><%= usuario.codigo %></td>
            <td><%= link_to usuario.nome, usuario %></td>
            <td><%= usuario.perfil.text %></td>
            <td><%= usuario.email %></td>
            <td><%= l usuario.current_sign_in_at, :format => '%d/%m/%Y %H:%M' if usuario.current_sign_in_at %></td>
            <td><%= usuario.ativo ? 'Ativo' : 'Inativo' %></td>
            <td><%= link_to "Editar", edit_usuario_path(usuario), class: 'btn btn-default btn-sm' %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <!-- /.table-responsive -->
</div>
