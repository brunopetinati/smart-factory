<div class="page-header">
  <h1>Fornecedores</h1>
  <%= link_to "Novo Fornecedor", new_fornecedor_path, class: 'btn btn-primary' %>
</div>

<div class="panel panel-default">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Descrição</th>
        <th>Data cadastro</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @fornecedores.each do |fornecedor| %>
        <tr>
          <td><%= link_to fornecedor.descricao, fornecedor %></td>
          <td><%= l fornecedor.created_at, format: :xshort %></td>
          <td><%= link_to 'Editar', edit_fornecedor_path(fornecedor), class: 'btn btn-default btn-xs' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
