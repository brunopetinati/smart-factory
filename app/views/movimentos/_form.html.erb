<%= simple_form_for([movimento.produto, movimento], multipart: true) do |f| %>
  <%= f.hidden_field :produto_id %>
  <%= f.hidden_field :tipo %>

  <div class="panel panel-default">
    <div class="panel-body">
      <% if movimento.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(movimento.errors.count, "erro") %></h2>

          <ul>
          <% movimento.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <%= f.input :quantidade %>
      <%= f.input :observacao, label: 'ObservaÃ§Ã£o' %>
    </div>

    <div class="panel-footer">
      <%= f.submit "Salvar", class: 'btn btn-primary' %> ou
      <%= link_to "Cancelar", :back, class: 'btn btn-default' %>
      <%= link_to "Apagar", [@movimento.produto, @movimento], 
                  method: :delete, 
                  class: 'btn btn-danger pull-right',
                  data: { confirm: 'Tem certeza que quer apagar?' } if @movimento.persisted? %> 
    </div>
  </div>
<% end %>
