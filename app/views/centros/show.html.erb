<div class="page-header">
  <h1>
    <%= @centro.codigo %> - <%= @centro.descricao %>
  </h1>
  <div class="pull-right">
    <%= link_to "Editar", edit_centro_path(@centro), class: 'btn btn-primary' %>
  </div>
</div>

<div class="panel panel-default">
  <table class="table">
    <tr>
      <td class="col-md-2">Descrição</td> <td><%= @centro.descricao %></td>
    </tr>
    <tr>
      <td>Data do cadastro</td> <td><%= l @centro.created_at %></td>
    </tr>
  </table>
</div>
