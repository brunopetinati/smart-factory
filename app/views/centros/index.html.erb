<div class="page-header">
  <h1>Centros de Custo</h1>
  <%= link_to "Novo Centro", new_centro_path, class: 'btn btn-primary' %>
</div>

<div class="panel panel-default">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Descrição</th>
        <th>Data cadastro</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @centros.each do |centro| %>
        <tr>
          <td><%= link_to centro.descricao, centro %></td>
          <td><%= l centro.created_at, format: :xshort %></td>
          <td><%= link_to 'Editar', edit_centro_path(centro), class: 'btn btn-default btn-xs' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
