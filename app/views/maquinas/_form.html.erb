<%= simple_form_for(maquina, multipart: true) do |f| %>
  <div class="panel panel-default">
    <div class="panel-body">
      <% if maquina.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(maquina.errors.count, "erro") %></h2>

          <ul>
          <% maquina.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <%= codigo_field(f) %>

      <div class="row">
        <%= f.input :descricao, label: "Descrição", wrapper_html: { class: 'col-md-8' } %>
        <%= f.input :status, wrapper_html: { class: 'col-md-4' } %>
      </div>

      <%= link_ver_arquivo @maquina, :foto %>
      <%= f.input :foto %>

      <div class="row">
        <%= f.input :modelo, wrapper_html: { class: 'col-md-4' } %>
        <%= f.input :fabricante, wrapper_html: { class: 'col-md-4' } %>
        <%= f.input :codigo_interno, label: "Código interno", wrapper_html: { class: 'col-md-4' } %>
      </div>
      <div class="row">
        <%= f.input :data_compra, include_blank: true, start_year: 1900, wrapper_html: { class: 'col-md-6' } %>
        <%= f.input :data_fabricacao, label: "Data fabricação", start_year: 1900, include_blank: true, wrapper_html: { class: 'col-md-6' } %>
      </div>
      <%= f.input :observacao, label: "Observação" %>
    </div>

    <div class="panel-footer">
      <%= f.submit "Salvar", class: 'btn btn-primary' %> ou
      <%= link_to "Cancelar", :back, class: 'btn btn-default' %>
      <%= link_to "Apagar", @maquina, 
                  method: :delete, 
                  class: 'btn btn-danger pull-right',
                  data: { confirm: 'Tem certeza que quer apagar?' } if @maquina.persisted? %> 
    </div>
  </div>
<% end %>
