<div class="page-header">
  <h1>Máquinas</h1>
  <%= link_to "Nova Máquina", new_maquina_path, class: 'btn btn-primary' %>
</div>

<div class="panel panel-default">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Descrição</th>
        <th>Data cadastro</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @maquinas.each do |maquina| %>
        <tr>
          <td><%= link_to maquina.descricao, maquina %></td>
          <td><%= l maquina.created_at, format: :xshort %></td>
          <td><%= link_to 'Editar', edit_maquina_path(maquina), class: 'btn btn-default btn-xs' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
