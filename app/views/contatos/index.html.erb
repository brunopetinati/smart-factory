<div class="page-header">
  <h1>Contatos</h1>
  <%= link_to "Novo Contato", new_contato_path, class: 'btn btn-primary' %>
</div>

<div class="panel panel-default">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Descrição</th>
        <th>Data cadastro</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @contatos.each do |contato| %>
        <tr>
          <td><%= link_to contato.descricao, contato %></td>
          <td><%= l contato.created_at, format: :xshort %></td>
          <td><%= link_to 'Editar', edit_contato_path(contato), class: 'btn btn-default btn-xs' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
